{
  "version": 2,
  "buildCommand": "cd proofpals-frontend && npm ci && npm run build",
  "outputDirectory": "proofpals-frontend/dist",
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "HOST": "0.0.0.0"
  }
}
